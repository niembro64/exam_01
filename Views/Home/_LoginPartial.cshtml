@model LoginUser

<form class="d-flex flex-column align-items-start m-1 p-3 border rounded bg-light shadow" style="width: 17rem;"
        action="/users/login" method="post">
        <h3>Login</h3>
        <div class="border rounded m-1 p-3 bg-secondary text-white d-flex flex-column align-items-center">
                <p class="p-0 m-0"><i><small>Default:
                                </small></i></p>
                <p class="p-0 m-0"><small>
                        </small></p>
