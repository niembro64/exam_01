@{
    ViewData["Title"] = "Meetups";
    int rId = 0;
}
@model Meetup

<div class="text-center">
    <h1>Meetups</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">MeetupId</th>
                <th scope="col">Title</th>
                <th scope="col">DateTime</th>
                <th scope="col">Functions</th>
                <th scope="col">CreatedBy</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Meetup x in @ViewBag.AllMeetups)
            {

                @if (x.Date > DateTime.Now)
                {


                    <tr>
                        <td class="align-middle">
                            <p class="align-middle">@x.MeetupId</p>
                        </td>
                        <td class="align-middle">
                            <p><a class="btn btn-success btn-block my-3" href="/meetups/@x.MeetupId">@x.Title</a></p>
                        </td>
                        <td class="align-middle">
                            <p>@x.Date</p>
                        </td>

                        @if (@x.UserId == @ViewBag.Session_UserId)
                        {
                            <td class="align-middle"><a class="btn btn-danger btn-block my-3" href="/meetups/delete/@x.MeetupId">Delete</a></td>
                        }
                        @if (@x.UserId != @ViewBag.Session_UserId)
                        {
                            bool found = false;
                            @* int rId = 0; *@
                            @foreach (Reservation a in @ViewBag.OneUserReservations)
                            {
                                @if (a.MeetupId == x.MeetupId)
                                {
                                    found = true;
                                    rId = a.ReservationId;
                                }
                            }
                            if (found && rId != 0)
                            {
                                <td class="align-middle">
                                    <a class="btn btn-warning btn-block my-3" href="/reservations/delete/@rId">De-RSVP</a>
                                </td>
                            }
                            else
                            {
                                <td class="align-middle">
                                    <form action="/reservations/reserve" method="post">
                                        <input type="hidden" asp-for="UserId" value=@ViewBag.Session_UserId>
                                        <input type="hidden" asp-for="MeetupId" value=@x.MeetupId>
                                        <input type="submit" value="RSVP" class="btn btn-primary btn-block my-3">
                                    </form>
                                </td>
                            }
                        }
                        <td class="align-middle">
                            <p>@x.Creator.Name</p>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

