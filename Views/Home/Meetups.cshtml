@{
    ViewData["Title"] = "Events";
    int rId = 0;
}
@model Meetup

<div class="text-center">
    <h1>Events</h1>
    <table class="table table-hover m-0 p-0">
        <thead class="border-0">
            <tr>
                @* <th scope="col">MeetupId</th> *@
                @* <th class="border-0" scope="col">Host</th> *@
                <th class="border-0" scope="col">Event</th>
                <th class="border-0" scope="col">DateTime</th>

                <th class="border-0" scope="col">Going</th>

            </tr>
        </thead>
        <tbody class="bg-light border rounded">
            @foreach (Meetup x in @ViewBag.AllMeetups)
            {

                @if (x.Date > DateTime.Now)
                {
                    <tr>


                        @* <td class="align-middle">
                            <p class="align-middle">@x.MeetupId</p>
                            </td> *@
                        <td class="align-middle">
                            <p class="m-0 p-0"><a class="btn btn-warning btn-block my-2"
                            href="/meetups/@x.MeetupId">@x.Creator.Name's @x.Title</a></p>
                        </td>
                        <td class="align-middle">
                            <p class="m-0 p-0">@x.Date</p>
                        </td>



                        @if (@x.UserId == @ViewBag.Session_UserId)
                        {
                            <td class="align-middle"><a class="btn btn-danger btn-block my-2" href="/meetups/delete/@x.MeetupId">✖ Delete</a></td>

                        }
                        @if (@x.UserId != @ViewBag.Session_UserId)
                        {
                            bool found = false;
                            @* int rId = 0; *@
                            @foreach (Reservation a in @ViewBag.OneUserReservations)
                            {
                                @if (a.MeetupId == x.MeetupId)
                                {
                                    found = true;
                                    rId = a.ReservationId;
                                }
                            }
                            if (found && rId != 0)
                            {
                                <td class="align-middle">
                                    <a class="btn btn-primary btn-block my-2" href="/reservations/delete/@rId">⭐ Going</a>
                                </td>
                            }
                            else
                            {
                                <td class="align-middle">
                                    <form action="/reservations/reserve" method="post">
                                        <input type="hidden" asp-for="UserId" value=@ViewBag.Session_UserId>
                                        <input type="hidden" asp-for="MeetupId" value=@x.MeetupId>
                                        <input type="submit" value="☁ RSVP" class="btn btn-outline-primary btn-block my-2">
                                    </form>
                                </td>
                            }
                        }

                    </tr>
                }
            }
        </tbody>
    </table>

